abstract class Base {
     int x, y;

     void getdata(int a, int b) {
         x = a;
         y = b;
     }
     abstract void display();
}

class Derived extends Base {
     void display() {
         System.out.println("x = " + x + ", y = " + y);
     }
}
class Main {
     public static void main(String[] args) {
         Derived d = new Derived();
         d.getdata(10, 20);
         d.display();
     }
}
